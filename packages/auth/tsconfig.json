{
  "extends": "../config/tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "ES2022"
    ],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "lib/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}